<div class="container">
    <div class="row mt-5">
        <div class="d-flex justify-content-center col-md-12">
            <div class="card">
                <h4 class=" d-flex justify-content-center">Account Login</h4>
                <div class="p-0  d-flex justify-content-center card-body">
                    <form  action="/user_id" method="POST">
                        <div class="d-flex mb-2 justify-content-between">
                            <label class="mr-2" for="email">e-mail:</label>
                            <input type="email" name="email" id="email" placeholder="e-mail" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <label class="mr-2" for="password">password:</label>
                            <input type="text" name="password" id="password" placeholder="password" required>   
                        </div>
                        <div class="m-3 d-flex justify-content-center">
                            <button class="btn btn-info" type="submit">Sign in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
